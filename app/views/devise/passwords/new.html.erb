<link rel="stylesheet" href="/assets/login.css.scss">

<div class ="dahong-login-position-box">
  <div class="login-header dahong-fg-title" >
    <h4><%= t(".forgot_your_password") %></h4>
  </div>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs text-left "style="line-height: 300%">
    <%= f.input :email, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    
    <%= f.button :submit, t(".send_me_reset_password_instructions"), class: 'dahong-fg-btn', style: " background-color: #ff6c6c; color: white;"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
 </div>